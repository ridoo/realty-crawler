<configuration>
	<appender name="console" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{ISO8601} [%t] %-5p %c: %m%n</pattern>
		</encoder>
	</appender>
	<appender name="FILE"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${catalina.home}/logs/realty-crawler.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- daily rollover -->
			<fileNamePattern>${catalina.home}/logs/realty-crawler.%d{yyyy-MM-dd}.log</fileNamePattern>
			<!-- keep 14 days worth of history -->
			<maxHistory>14</maxHistory>
		</rollingPolicy>
		<encoder>
			<pattern>%d{ISO8601} [%t] %-5p %c: %m%n</pattern>
		</encoder>
	</appender>
	<logger name="com.github.matthesrieke" level="INFO" />
	<root level="WARN">
		<appender-ref ref="console" />
		<appender-ref ref="FILE" />
	</root>
</configuration>
